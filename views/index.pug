doctype html
html
  head
    meta(name="viewport",content="width=device-width, initial-scale=1")
    title="Highest adjacent product"
    link(rel="stylesheet",href="/assets/style/style.css")
    script(src='/assets/js/userfunc.js')
  body
    .cont
      p.titre
        |Find the highest adjacent product
        br
        |#[span.subtitle In a given series of numbers]
      .nbvalue
        p.titlefill="How many random values to search in :"
        input.nbv#nbvalues(type="number",name="nbvalue",min="1",max="500",placeholder="N° of random values (max 500)")
        input.fillbutton(type="button",name="buttonFill",onclick="fillForm()",value="Fill")
      form.mainform#mainform(action="/" method="POST")
        p.titleform="Here's your serie of numbers to study :"
        textarea.mainfield#formtofill(type="text",name="serie",placeholder=serie readonly)
        .inputfactors
          p.titlefactors="How many consecutive factors to seek :"
          input.nbfactors#nbfactors(type="number",name="nbfactors",placeholder="N° of factors (max 20)")
          input.submitwhole(type="submit",value="Submit")
        p.titlechain
          |The chain of #{nb} factors producing the higest product is : #{chain}
          br
          |The resulting product is : #{result}
        
